<h1 class="text-5xl text-purple-700 text-center my-8">Trang hiện thị tất cả các khóa học</h1>
<div class=" flex-nowrap ">
    {{#each courses}}
   <!-- Start of component -->
   <div class="max-w-2xl bg-white border-2 border-gray-300 p-5 rounded-md tracking-wide shadow-lg">
      <div id="header" class="flex"> 
         <a href="/courses/{{this.slug}}">
            <img class="w-45 rounded-md border-2 border-gray-300 overflow-auto" src="{{this.image}}" alt="{{this.name}}" />
         </a>
         <div id="body" class="flex flex-col ml-5">
            <a href="/courses/{{this.slug}}">
               <h4 id="name" class="text-xl font-semibold mb-2">{{this.name}}</h4>
            </a>
            <p id="job" class="text-gray-800 mt-2">{{this.discription}}</p>
            <div class="flex mt-5">
               <p class="ml-3">Buying</p>
            </div>
         </div>
      </div>
   </div>
   <!-- End of component -->
   {{/each}}
</div>
