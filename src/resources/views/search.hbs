<div class="search-form">
    <form method="POST" >
        <style>
            .input {
                transition: border 0.2s ease-in-out;
                min-width: 280px
            }

            .input:focus+.label,
            .input:active+.label,
            .input.filled+.label {
                font-size: .75rem;
                transition: all 0.2s ease-out;
                top: -0.1rem;
                color: #667eea;
            }

            .label {
                transition: all 0.2s ease-out;
                top: 0.4rem;
                left: 0;
            }
        </style>
        <div class="shadow-xl p-10 bg-white max-w-xl rounded">
            <h1 class="text-4xl font-black mb-4">Input</h1>
            <div class="mb-4 relative">
                <input
                    class="input border border-gray-400 appearance-none rounded w-full px-3 py-3 pt-5 pb-2 focus focus:border-indigo-600 focus:outline-none active:outline-none active:border-indigo-600 mb-2"
                    id="name" type="text" name="name" placeholder="name">
                <input
                    class="input border border-gray-400 appearance-none rounded w-full px-3 py-3 pt-5 pb-2 focus focus:border-indigo-600 focus:outline-none active:outline-none active:border-indigo-600 mb-2"
                    id="age" type="text" name="age" placeholder="age">
                <input
                    class="input border border-gray-400 appearance-none rounded w-full px-3 py-3 pt-5 pb-2 focus focus:border-indigo-600 focus:outline-none active:outline-none active:border-indigo-600"
                    id="class" type="text" name="class" placeholder="class">

            </div>
            <button type="submit"
                class="bg-indigo-600 hover:bg-blue-dark text-white font-bold py-3 px-6 rounded">Search</button>
        </div>
    </form>
</div>